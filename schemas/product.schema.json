{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product Schema",
  "description": "Schema for BrainAlgo product data",
  "type": "object",
  "required": ["id", "name", "description", "url", "status"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique product identifier",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Product name",
      "minLength": 3,
      "maxLength": 50
    },
    "description": {
      "type": "string",
      "description": "Product description",
      "minLength": 20,
      "maxLength": 200
    },
    "url": {
      "type": "string",
      "description": "Product URL",
      "format": "uri",
      "pattern": "^https://"
    },
    "status": {
      "type": "string",
      "description": "Product status",
      "enum": ["active", "coming-soon", "beta", "deprecated"]
    },
    "features": {
      "type": "array",
      "description": "List of key features",
      "items": {
        "type": "string",
        "minLength": 5,
        "maxLength": 100
      },
      "minItems": 2,
      "maxItems": 8
    },
    "stats": {
      "type": "object",
      "description": "Product statistics",
      "properties": {
        "students": {"type": "string"},
        "lessons": {"type": "string"},
        "completion_rate": {"type": "string"}
      }
    },
    "launch_date": {
      "type": "string",
      "description": "Launch date (YYYY-MM-DD)",
      "format": "date"
    },
    "expected_launch": {
      "type": "string",
      "description": "Expected launch (e.g., Q2 2025)"
    }
  }
}
