{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Job Application Schema",
  "description": "Schema for BrainAlgo job applications",
  "type": "object",
  "required": ["id", "name", "email", "role", "experience", "motivation", "submitted_at"],
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique application ID"
    },
    "name": {
      "type": "string",
      "description": "Full name of applicant",
      "minLength": 2,
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "description": "Email address",
      "format": "email"
    },
    "role": {
      "type": "string",
      "description": "Role applied for",
      "enum": ["Software Engineer", "Product Manager", "UI/UX Designer", "Data Scientist", "DevOps Engineer", "Marketing", "Other"]
    },
    "experience": {
      "type": "string",
      "description": "Experience level",
      "enum": ["0-1 years", "2-3 years", "4-6 years", "7+ years"]
    },
    "motivation": {
      "type": "string",
      "description": "Why they want to join",
      "minLength": 20,
      "maxLength": 1000
    },
    "linkedin": {
      "type": "string",
      "description": "LinkedIn profile URL",
      "format": "uri"
    },
    "submitted_at": {
      "type": "string",
      "description": "Submission timestamp",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "description": "Application status",
      "enum": ["pending", "reviewed", "interview", "accepted", "rejected"],
      "default": "pending"
    }
  }
}
